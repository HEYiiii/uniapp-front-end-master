<view class="_div"><form><view class="cu-form-group margin-top"><view class="title">商品名</view><input placeholder="请填写商品关键名称哦~" name="{{goods.prodName}}" data-event-opts="{{[['input',[['__set_model',['','productName','$event',[]]]]]]}}" value="{{productName}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">价格</view><input placeholder="请输入商品价格哦，例如9.99" name="{{goods.nowPrice}}" data-event-opts="{{[['input',[['__set_model',['','nowPrice','$event',[]]]]]]}}" value="{{nowPrice}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">原价</view><input placeholder="可以输入商品原价格~" name="{{goods.prePrice}}" data-event-opts="{{[['input',[['__set_model',['','prePrice','$event',[]]]]]]}}" value="{{prePrice}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">手机号</view><input placeholder="方便买家联系哦" name="{{goods.subContact}}" data-event-opts="{{[['input',[['__set_model',['','phoneNumber','$event',[]]]]]]}}" value="{{phoneNumber}}" bindinput="__e"/><view class="cu-capsule radius"><view class="cu-tag bg-blue">+86</view><view class="cu-tag line-blue">中国大陆</view></view></view><view class="cu-form-group"><view class="title">商品分类</view><picker mode="multiSelector" value="{{multiIndex}}" range="{{multiArray}}" data-event-opts="{{[['change',[['MultiChange',['$event']]]],['columnchange',[['MultiColumnChange',['$event']]]]]}}" bindchange="__e" bindcolumnchange="__e"><view class="picker">{{''+multiArray[0][multiIndex[0]]+"，"+multiArray[1][multiIndex[1]]+''}}</view></picker></view><view class="cu-form-group margin-top"><textarea maxlength="-1" disabled="{{modalName!=null}}" placeholder="输入商品描述" name="{{goods.prodDescription}}" data-event-opts="{{[['input',[['__set_model',['','productDescription','$event',[]]],['textareaAInput',['$event']]]]]}}" value="{{productDescription}}" bindinput="__e"></textarea></view></form><view data-event-opts="{{[['tap',[['updateProduct',['$event']]]]]}}" class="padding flex flex-direction" bindtap="__e">