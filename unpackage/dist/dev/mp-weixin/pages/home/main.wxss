.container {
	/* padding-bottom: 80rpx; */
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	height: 10%;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
#head-img {
	height: 175rpx;
	width: 175rpx;
	margin: 60rpx 0 20rpx;
}
.RoundBg{
	position: absolute;
	background-color: #5B8FF9;
	width: 100%;
	height: 400rpx;
	-webkit-border-bottom-right-radius: 70rpx;
	        border-bottom-right-radius: 70rpx;
	-webkit-border-bottom-left-radius: 70rpx;
	        border-bottom-left-radius: 70rpx;
}
.somewords {
	margin-top: 10px;
	text-align: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	display: inline-block;
	height: 20px;
	font-size: 10px;
}
.name {
	margin-top: 10px;
	text-align: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	display: inline-block;
	height: 20px;
	font-size: 15px;
}
.round {
	-webkit-border-radius: 5000rpx;
	        border-radius: 5000rpx;
}
.margin-left {
	margin-left: 30rpx;
}
.cu-avatar {
	font-variant: small-caps;
	margin: 0;
	padding: 0;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	text-align: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background-color: #ccc;
	color: var(--white);
	white-space: nowrap;
	position: relative;
	width: 64rpx;
	height: 64rpx;
	background-size: cover;
	background-position: center;
	vertical-align: middle;
	font-size: 1.5em;
}
.cu-avatar.xl {
	width: 128rpx;
	height: 128rpx;
	font-size: 2.5em;
}

